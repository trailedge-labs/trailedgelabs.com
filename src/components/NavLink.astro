---
import HeaderLink from './HeaderLink.astro';

interface Props {
  url: string;
  text: string;
}
const { url, text } = Astro.props as Props;
---

<HeaderLink href={url} class='relative inline-block w-full h-full px-4 py-5 mx-2 font-medium leading-tight text-center md:py-2 group md:w-auto md:px-2 lg:mx-3 md:text-center duration-300 ease-out text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100'>
  <div class='flex items-center space-x-2'>
    <slot />
    <span>{text}</span>
  </div>
  <span class='absolute bottom-0 w-0 h-px duration-300 ease-out translate-y-6 group-hover:left-0 left-1/2 group-hover:w-full bg-gradient-to-r md:from-sec-dark md:via-acc md:to-sec-dark dark:md:from-gray-700 dark:md:via-gray-400 dark:md:to-gray-700 dark:from-gray-900 dark:via-gray-600 dark:to-gray-900'></span>
</HeaderLink>
<style>
.active > div{
  @apply text-gray-900 dark:text-gray-100;
}
.active > span {
  @apply left-0 w-full;
}
</style>
