---
import TrailedgeLabsIcon from './TrailedgeLabsIcon.astro';
import Links from './Links.astro';
import Link from './Link.astro';
---

<section class='flex flex-wrap items-center justify-between pt-20'>
  <div class='flex'>
    <a href='/'>
      <TrailedgeLabsIcon />
    </a>
    <span class='font-baunk text-xs text-gray-900 dark:text-gray-100 py-[1.5em]'>Headquartered in Richmond, VA, USA</span>
  </div>

  <div class='flex gap-2 flex-wrap flex-row-reverse'>
    <Links small={true} />

    <Link name='Blog' url='/blog' small={true}>
      <path d="M12 20h9"/><path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z"/>
    </Link>
    <Link name='About' url='/about' small={true}>
      <g stroke-linecap="round" stroke-width="1.5"><path stroke-linejoin="round" d="M11.959 14.724c-3.6 0-7.62 2.928-7.62 6.526m7.62-9.785a4.362 4.362 0 0 0 4.035-2.683a4.355 4.355 0 0 0-3.17-5.948a4.362 4.362 0 0 0-5.215 4.274a4.356 4.356 0 0 0 4.35 4.357"/><path stroke-miterlimit="10" d="M15.318 15.92a1.599 1.599 0 0 1 1.742-.907a1.55 1.55 0 0 1 1.137.81a1.347 1.347 0 0 1-.784 1.851a.993.993 0 0 0-.64.898v.37"/><path stroke-linejoin="round" d="M16.745 20.987h.002"/></g>
    </Link>
  </div>
</section>
