---
interface Props {
  url: string;
  name: string;
  small?: boolean;
}
const { url, name, small=false } = Astro.props as Props;
---

<a href={url} target='_blank' class='flex gap-1 cursor-pointer font-baunk text-gray-800 dark:text-gray-200 h-12 items-center justify-center space-y-2 font-semibold rounded-lg border-[1px] border-none bg-sec-half dark:bg-sec-half-dark px-4 py-2 text-sm rounded-md shadow-xl active:translate-y-[2px] transition-all duration-300 ease-out hover:shadow-acc-shadow dark:hover:shadow-acc-shadow-dark'> 
  <svg class='stroke-gray-800 dark:stroke-gray-200' width="1.5em" height="1.5em" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <title>{name}</title>
    <slot />
  </svg>
  {!small && (<bold>{name}</bold>)}
</a>
